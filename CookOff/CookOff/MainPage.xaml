<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CookOff.ViewModels"
             x:Class="CookOff.MainPage">

    <ContentPage.BindingContext>
        <local:MainPageVM />
    </ContentPage.BindingContext>
    <StackLayout>
        <Button Text="Create Recipe" Command="{Binding NavigateToCreateRecipeCommand}" />
        <CollectionView ItemsSource="{Binding Recipes}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal">
                        <Image Source="{Binding GetImagePath}" WidthRequest="50" HeightRequest="50" />
                        <StackLayout>
                            <Label Text="{Binding GetName}" />
                            <Label Text="{Binding GetRating}" />
                        </StackLayout>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
