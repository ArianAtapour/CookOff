<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CookOff.ViewModels"
             x:Class="CookOff.MainPage">

    <ContentPage.BindingContext>
        <local:MainPageVM />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Button Text="Create Recipe" Command="{Binding NavigateToCreateRecipeCommand}" Margin="0,0,0,10"/>
        <Button Text="View Recipe" Command="{Binding NavigateToViewRecipeCommand}" Margin="0,0,0,10"/>
        <CollectionView ItemsSource="{Binding Recipes}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Margin="0,5,0,5">
                        <Image Source="{Binding GetImagePath}" WidthRequest="50" HeightRequest="50" Margin="0,0,10,0"/>
                        <StackLayout>
                            <Label Text="{Binding GetName}" />
                            <Label Text="{Binding GetRating}" />
                        </StackLayout>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
