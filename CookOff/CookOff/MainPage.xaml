<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CookOff.ViewModels"
             x:Class="CookOff.MainPage">

    <ContentPage.BindingContext>
        <local:MainPageVM />
    </ContentPage.BindingContext>

    <StackLayout>
        <Button Text="Create Recipe" Command="{Binding NavigateToCreateRecipeCommand}" />

        <CollectionView ItemsSource="{Binding Recipes}" SelectionMode="Single" SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal">
                        <Image Source="{Binding ImagePath}" WidthRequest="100" HeightRequest="100" />
                        <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" Margin="10,0,0,0">
                            <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="Medium" />
                            <Label Text="{Binding Rating}" />
                        </StackLayout>
                        <CheckBox IsChecked="{Binding IsSelected}" VerticalOptions="CenterAndExpand" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Delete Selected Recipes" Command="{Binding DeleteSelectedRecipesCommand}" />
    </StackLayout>
</ContentPage>
